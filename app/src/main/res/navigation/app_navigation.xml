<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="app.menu.menutechnologiestestapp.ui.usecases.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="Login" >
        <action
            android:id="@+id/action_loginFragment_to_venuesListFragment"
            app:destination="@id/venuesListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/venuesListFragment"
        android:name="app.menu.menutechnologiestestapp.ui.usecases.venues_list.VenuesListFragment"
        android:label="Venues List"
        tools:layout="@layout/fragment_venues_list" >
        <action
            android:id="@+id/action_venuesListFragment_to_venueDetailsFragment"
            app:destination="@id/venueDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/venuesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/venueDetailsFragment"
        android:name="app.menu.menutechnologiestestapp.ui.usecases.venue_details.VenueDetailsFragment"
        android:label="Venue Details"
        tools:layout="@layout/fragment_venue_details" />
</navigation>