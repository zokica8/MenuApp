<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.usecases.venue_details.VenueDetailsFragment">

    <ImageView
        android:id="@+id/downloaded_image_IV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,3:2"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/image_not_available"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_CL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/downloaded_image_IV">

        <TextView
            android:id="@+id/name_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/welcome_message_TV"
            tools:text="Name"/>

        <TextView
            android:id="@+id/welcome_message_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_TV"
            app:layout_constraintBottom_toTopOf="@id/intro_TV"
            tools:text="Welcome Message"/>

        <TextView
            android:id="@+id/intro_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_message_TV"
            app:layout_constraintBottom_toTopOf="@id/open_closed_TV"
            tools:text="Intro"/>

        <TextView
            android:id="@+id/open_closed_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro_TV"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Open/Closed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>